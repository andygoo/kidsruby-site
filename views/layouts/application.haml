!!! Strict
%html{ :xmlns => "http://www.w3.org/1999/xhtml", :lang => "en", 'xml:lang' => "en" }
  %head
    %title= @title || "Kidsruby.com"
    %link{:href=>'stylesheets/print.css', :rel => 'stylesheet', :media => "print", :type => "text/css"}
    %link{:href=>'stylesheets/screen.css', :rel => 'stylesheet', :media => "screen", :type => "text/css"}
    /[if IE]
      %link{:href=>'stylesheets/ie.css', :rel => 'stylesheet', :media => "screen", :type => "text/css"}

    %script{:type => "text/javascript", :src => "http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"}
    %script{:type => "text/javascript", :src => "javascripts/jquery.juitter.js"}
    %script{:type => "text/javascript", :src => "javascripts/system.js"}
    %script{:type => "text/javascript", :src => "javascripts/application.js"}
  %body
    .container
      %header
        %nav
          %ul
            %li
              %a.first{:href => '/'} Home
            %li
              %a{:href => '/download'} Download
            %li
              %a.last{:href => '/contact'} Contact

        %div#thumb
          %img{:src => "/images/weblogo.png", :id => "thumb-drive"}

      = yield

      %aside
        %div.social
          %div#addthis
            %div.socialButtons.icon-rss
            %a.socialButtons.icon-twitter{:href => "http://www.twitter.com/kidsruby"}
            %div.socialButtons.icon-fb

            <!-- AddThis Button BEGIN -->
            <div class="addthis_toolbox addthis_default_style ">

            <a class="addthis_button_facebook_like" fb:like:layout="button_count"></a>
            <a class="addthis_button_tweet"></a>
            <a class="addthis_counter addthis_pill_style"></a>
            </div>
            <script type="text/javascript" src="http://s7.addthis.com/js/250/addthis_widget.js#username=xa-4d3044bd33b50dde"></script>
            <!-- AddThis Button END -->

          %form
            %fieldset.newsletter
              %label Subscribe to our newsletter to receive the latest news about <a href="http://www.kidsruby.com">KIDSRUBY</a>
            %fieldset.subscribe
              %input{:name => "email", :type => "email", :placeholder => "Email", :required => ""}
              %input{:type => "submit", :value => "Submit"}

          %header
            <a href="http://www.twitter.com/kidsruby">KIDSRUBY</a> on Twitter
          %a.icon-twitterbutton{:href => "http://www.twitter.com/kidsruby"}
          %span.twitterinfo
            %header
              Kids Ruby <br/>
              @kidsruby Planet Earth!
            Let's teach kids how to program using Ruby! Programming is fun, and good for you too.
            http://kidsruby.com
          #twitter-feed

      %footer
        %img.left{:src => "/images/rocksBottomLeft.png"}
        %div
          %span
            %a{:href => "http://hybridgroup.com"} The HybridGroup
            %a{:href => '/'} Terms of Service
            %a{:href => '/contact'} Contact
          %br
          %span.rights All Rights Reseved 2011 <a href="http://hybridgroup.com">The Hybrid Group</a>
        %img.right{:src => "/images/rubyBottomRight.png"}

      = partial :_analytics
